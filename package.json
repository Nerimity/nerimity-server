{
  "name": "nerimity-server",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsup --watch --onSuccess \"pnpm start-dist-both \"",
    "start-dist-both": "concurrently \"pnpm start-dist-api\" \"pnpm start-dist-ws\"",
    "start-dist-api": "node --trace-warnings --enable-source-maps dist/index.mjs --api",
    "start-dist-ws": "node --trace-warnings --enable-source-maps dist/index.mjs --ws",
    "start-api": "tsup --onSuccess \"node --trace-warnings --enable-source-maps dist/index.mjs --api \"",
    "start-ws": "tsup --onSuccess \"node --trace-warnings --enable-source-maps dist/index.mjs --ws \"",
    "bundle": "tsup",
    "dev-api": "tsup --watch --onSuccess \"node --enable-source-maps dist/index.mjs --api \"",
    "dev-ws": "tsup --watch --onSuccess \"node --enable-source-maps dist/index.mjs --ws \"",
    "build": "pnpm bundle",
    "test": "pnpm bundle && concurrently \"pnpm start-dist-both\" \"pnpm test:wait && pnpm vitest\"",
    "test:wait": "node -e \"const http=require('http');const urls=['http://localhost:8080/api','http://localhost:8081'];const start=Date.now();const wait=(u)=>new Promise(r=>{const t=setInterval(()=>{http.get(u,res=>{if(res.statusCode&&res.statusCode<500){clearInterval(t);r();}}).on('error',()=>{});if(Date.now()-start>30000){clearInterval(t);process.exit(1);}},500);});(async()=>{for(const u of urls) await wait(u);})().catch(()=>process.exit(1));\"",
    "prisma:create": "prisma migrate dev --name",
    "prisma:migrate_dev": "prisma migrate dev",
    "prisma:migrate_deploy": "prisma migrate deploy",
    "prisma:generate": "prisma generate"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
